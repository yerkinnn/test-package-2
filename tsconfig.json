{
  "compilerOptions": {
    // IMPORTANT: produce clean JS + types for consumers
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",

    // "baseUrl": "./",
    // "removeComments": true,
    "noImplicitAny": true,
    "strict": true,

    // Needed for NestJS decorators
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    // Module resolution
    // "moduleResolution": "node16",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "skipLibCheck": true,

    "rootDir": "src"

    // "incremental": true,
    // "paths": {
    //   "modules/*": ["./src/modules/*"],
    //   "shared/*": ["./src/shared/*"],
    //   "@/*": ["./*"]
    // }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
