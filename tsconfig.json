    // IMPORTANT: produce clean JS + types for consumers
    "target": "ES2020",
    "module": "CommonJS",              // NestJS libraries use CJS for compatibility
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "outDir": "dist",

    // For multi-entry library (client/admin/shared/user)
    "rootDir": "src",

    // Module resolution
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    // Needed for NestJS decorators
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "isolatedModules": false,

    "types": ["node", "validator"],   // <-- REQUIRED!!
    "skipLibCheck": true              // <-- Strongly recommended for libs
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
